{
  "plugins": ["p5js"],
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true,
    "browser": true,
    "jest": true,
    "p5js/p5": true
  },
  "extends": ["eslint:recommended", "plugin:p5js/p5"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"]
  }
}
